<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alarmitron_gps_fragment"
    android:tag="GPS">

    <com.google.android.gms.maps.MapView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/alarmitron_button_gps"
        android:id="@+id/map"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_location_black_24dp"
        android:layout_toEndOf="@+id/alarmitron_button_gps"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/alarmitron_button_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="showTimePickerDialog"
        android:text="Add GPS Alarm"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_location_black_24dp"
        android:layout_toStartOf="@+id/alarmitron_button_gps"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"/>

</RelativeLayout>


